﻿@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/loginRegister.css">
</head>


<div class="container-fluid form-container-wrapper">
    
        <div class="col-lg-6 col-md-8 col-sm-10 mt-5">
            <div class="card login-logout-card">
                <div class="card-header custom-card-header">
                    <ul class="nav nav-tabs card-header-tabs justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link" href="/Identity/Account/Login">
                                Log In
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link" href="/Identity/Account/Register">
                                Register
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body custom-card-body">
                    <div class="row justify-content-center">
                        <div class="col-12 my-4">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}