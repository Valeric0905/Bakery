@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Services Section</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Cairo:wght@200;300;400;600&family=Pacifico&family=Signika+Negative:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Lora:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/onlineCourses.css">

</head>
<body>
    <!-- START SERVICES SECTION -->
    <section class="section-services">
        <div class="header-section text-center">
            <h2 class="title">RECEPIES</h2>

        </div>
        <div class="services-grid">
            <!-- Single Service -->
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/1921.png" alt="Service Icon" />
                    <h3 class="title">
                        Poppy Seed, Strawberry, and Lemon
                    </h3>
                    <p class="description">
                        A vibrant and refreshing dessert featuring:

                        Poppy Seed Sponge Cake: A moist and nutty base with the delicate crunch of poppy seeds.
                        Lemon Curd: A tangy and smooth layer bursting with citrus flavor.
                        
                        
                    </p>
                    <a href="~/Courses/Product">Order now</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/1280.jpg" alt="Service Icon" />
                    <h3 class="title">Snickers</h3>
                    <p class="description">
                        Ingredients:

                        Chocolate sponge layers with chocolate in the mix
                        Caramel cream
                        Caramel and whipped cream
                        Milk chocolate mousse
                        Peanuts
                    </p>
                    <a href="~/Courses/Product">Order now</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/1281.jpg" alt="Service Icon" />
                    <h3 class="title">Cherry</h3>
                    <p class="description">
                        A luscious dessert featuring:

                        Cherry-flavored sponge or base
                        Rich cherry filling or compote
                        Light cream or mousse layer
                        Topped with a glossy cherry glaze or fresh cherries
                    </p>
                    <a href="~/Courses/Product">Order now</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/1282.jpg" alt="Service Icon" />
                    <h3 class="title">Chocolate Soufflé</h3>
                    <p class="description">
                        A rich and airy dessert made from:

                        High-quality dark chocolate
                        Whipped egg whites for a light and fluffy texture
                        Egg yolks and sugar for a creamy base
                        A touch of butter for richness
                    </p>
                    <a href="~/Courses/Product">Order now</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/1283.jpg" alt="Service Icon" />
                    <h3 class="title">Drunken Cherry</h3>
                    <p class="description">
                        A decadent dessert featuring:

                        Moist chocolate sponge cake
                        Cherries soaked in alcohol (such as brandy, rum, or liqueur)
                        Rich chocolate cream or mousse
                        Layers infused with the flavor of cherries and spirits
                    </p>
                    <a href="~/Courses/Product">Order now</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/1920.jpg" alt="Service Icon" />
                    <h3 class="title">Red velvet</h3>
                    <p class="description">
                        A classic and elegant dessert featuring:

                        Moist, velvety sponge cake with a signature deep red color
                        Subtle cocoa flavor combined with a hint of tanginess from buttermilk
                        Layers of smooth cream cheese frosting for a rich and creamy contrast
                    </p>
                    <a href="~/Courses/Product">Order now</a>
                </div>
                <span class="circle-before"></span>
            </div>
           

        </div>
    </section>

</body>
</html>
