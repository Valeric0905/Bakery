    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Services Section</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Cairo:wght@200;300;400;600&family=Pacifico&family=Signika+Negative:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Lora:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/onlineCourses.css">

</head>
<body>
    <!-- START SERVICES SECTION -->
    <section class="section-services">
        <div class="header-section text-center">
            <h2 class="title">FREE LESSONS</h2>

        </div>
        <div class="services-grid">
            <!-- Single Service -->
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/pavlova.jpg" alt="Service Icon" />
                    <h3 class="title">Pavlova</h3>
                    <p class="description">
                        
                        Pavlova is celebrated for its balance of textures and flavors, making it a perfect dessert for special occasions or summertime gatherings. Its light and airy nature ensures it’s as visually stunning as it is delicious!
                    </p>
                    <a href="~/Courses/Product">Learm more</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/beze.jpg" alt="Service Icon" />
                    <h3 class="title">Meringue</h3>
                    <p class="description">
                        Meringue is a classic, delicate dessert made primarily from whipped egg whites and sugar. Light, airy, and sweet, it can be crisp, chewy, or silky depending on the preparation method. Often flavored with vanilla, almond, or citrus, meringue is versatile and used in a variety of desserts.
                    </p>
                    <a href="~/Courses/Product">Learm more</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/roll.jpg" alt="Service Icon" />
                    <h3 class="title">Meringue Roll</h3>
                    <p class="description">
                        A light and airy dessert that combines the delicate texture of meringue with rich and flavorful fillings.The meringue roll is a perfect blend of sweetness and lightness, making it an irresistible treat for special occasions or indulgent moments.
                    </p>
                    <a href="~/Courses/Product">Learm more</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/pops.jpg" alt="Service Icon" />
                    <h3 class="title">Cake Pops</h3>
                    <p class="description">
                        Cake pops are delightful bite-sized treats made from a blend of crumbled cake and frosting, rolled into balls, placed on sticks, and coated in a smooth layer of chocolate or candy melts.
                    </p>
                    <a href="~/Courses/Product">Learm more</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/cin.jpeg" alt="Service Icon" />
                    <h3 class="title">Cinnabon</h3>
                    <p class="description">
                        Cinnabon is a world-famous treat known for its irresistibly soft and gooey cinnamon rolls. Each roll is freshly baked and generously coated with a rich, creamy frosting, offering a warm and indulgent experience with every bite.
                    </p>
                    <a href="~/Courses/Product">Learm more</a>
                </div>
                <span class="circle-before"></span>
            </div>
            <div class="single-service">
                <div class="content">
                    <img class="icon" src="~/images/cheese.jpg" alt="Service Icon" />
                    <h3 class="title">Cheesecake</h3>
                    <p class="description">
                        Cheesecake is a rich and creamy dessert that combines the smoothness of a cheese-based filling with a complementary crust. It’s a versatile treat that can be served plain or enhanced with a variety of toppings and flavors.
                    </p>
                    <a href="~/Courses/Product">Learm more</a>
                </div>
                <span class="circle-before"></span>
            </div>


        </div>
    </section>

</body>
</html>
