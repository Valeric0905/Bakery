<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/courses.css">
    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&display=swap" rel="stylesheet">
   
</head>
<body>
    <!--TOP NAVIGATION-->
    <header id="header">
        <div class="topnav" id="myTopnav">
            <a href="@Url.Action("Index", "Home")">
                <img class="logo" src="~/images/logo.png" alt="Home">
            </a>
            <a id="active"></a>
            <a href="/" class="active">HOME</a>           
            <a href="~/Courses/Courses">COURSES</a>
            <a href="~/Courses/TechCard">RECIPES</a>
            <a href="~/Courses/FreeLessons">FREE LESSONS</a>
            <a href="/Home/Index#footer">CONTACTS</a>
                      
            <partial name="_LoginPartial" />
            <a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="NavBar()">&#9776;</a>
        </div>
    </header>

        <main>
            @RenderBody()
        </main>

    <footer class="footer" id="footer">
        <div class="footer__container">
            <div class="footer__contacts">
                <h4>Contacts</h4>
                <div class="social-links">
                    <a href="https://facebook.com" target="_blank" aria-label="Whatsup">
                        <img src="~/images/what.png" alt="Whatsup">
                    </a>
                    <a href="https://instagram.com" target="_blank" aria-label="Telegram">
                        <img src="~/images/tel.png" alt="Telegram">
                    </a>
                    <a href="https://instagram.com" target="_blank" aria-label="Instagram">
                        <img src="~/images/inst.png" alt="Instagram">
                    </a>
                </div>

                <p> <a href="tel:+7(993)601-13-40">+1(888)601-13-40</a></p>
                <p> <a href="mailto:info@example.com">pekybakery@gmail.com</a></p>

            </div>


            <div class="footer__info">
                <h4>Information</h4>
                <a href="/Home/Index#faq">FAQ</a>
                <a href="~/Home/PrivacyPolicy">PRIVACY POLICY</a>
            </div>

            <div class="footer__about">
                <h4>Lessons</h4>
                <a href="~/Courses/Courses">COURSES</a>
                <a href="~/Courses/TechCard">RECEPIES</a>
                <a href="/feedback">FREE LESSONS</a>
                <a href="/Home/Index#footer">CONTACTS</a>
            </div>
        </div>
        <div class="footer__bottom">
            <p>&copy; 2025 LL Solutions Inc. All Rights Reserved.</p>
        </div>
    </footer>

    <div id="roll_back" style="display: none; position: fixed; bottom: 30px; right: 30px; z-index: 1000; cursor: pointer; background-color: #423a22; color: white; padding: 10px 15px; border-radius: 5px;">
        Back to Top
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
